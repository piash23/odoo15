<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="commodity_view_form" model="ir.ui.view">
        <field name="name">commodity.form</field>
        <field name="model">commodity</field>
        <field name="arch" type="xml">
            <form string="Commodity">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="commodity_view_tree" model="ir.ui.view">
        <field name="name">commodity.tree</field>
        <field name="model">commodity</field>
        <field name="arch" type="xml">
            <tree string="Commodity">
                <field name="code"/>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="commodity_view_search" model="ir.ui.view">
        <field name="name">commodity.search</field>
        <field name="model">commodity</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_commodity" model="ir.actions.act_window">
        <field name="name">Commodity</field>
        <field name="res_model">commodity</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="freight_management.commodity_view_tree"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Commodity!
            </p>
        </field>
    </record>

    <menuitem id="menu_commodity"
              parent="freight_management.menu_others_config"
              action="action_commodity" sequence="4"/>
</odoo>
