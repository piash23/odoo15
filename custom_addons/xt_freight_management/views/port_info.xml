<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="port_info_form_view" model="ir.ui.view">
            <field name="name">port.info.form</field>
            <field name="model">port.info</field>
            <field name="arch" type="xml">
                <form string="Port">
                    <sheet>
                        <div class="oe_title">
                            <label for="port_code"/>
                            <h1>
                                <field name="port_code" placeholder="Port Code"/>
                            </h1>
                        </div>
                        <group>

                            <field name="name"/>
                            <field name="country_id"/>
                            <field name="dg_cargo"/>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="port_info_tree_view" model="ir.ui.view">
            <field name="name">port.info.tree</field>
            <field name="model">port.info</field>
            <field name="arch" type="xml">
                <tree string="Port">
                    <field name="name" string="Port Name"/>
                    <field name="port_code"/>
                    <field name="country_code"/>
                    <field name="country_id" string="Country Name"/>
                    <field name="create_date"/>
                    <field name="created_by"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

