        <!--                                context="{'group_by':'example_field'}"/>-->
        <!--                    </group>-->
        <!--                </search>-->
        <!--            </field>-->
        <!--        </record>-->

        <record id="port_info_act_window" model="ir.actions.act_window">
            <field name="name">Port</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">port.info</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There is no examples click here to add new Port.
                </p>
            </field>
        </record>

        <menuitem name="Port" id="port_info_menu" parent="menu_others_config" action="port_info_act_window"/>

    </data>
</odoo>