<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="container_type_form_view" model="ir.ui.view">
            <field name="name">container.type.form</field>
            <field name="model">container.type</field>
            <field name="arch" type="xml">
                <form string="Container Type">
                    <sheet>
                        <div class="oe_title">
                            <label for="container_code"/>
                            <h1>
                                <field name="container_code" placeholder="Container Code"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="size"/>
                                <field name="no_of_teu"/>

                            </group>
                            <group>
                                <field name="max_cubic_ft"/>
                                <field name="max_volume"/>
                                <field name="max_weight"/>
                                <field name="temperature_flag"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="container_type_tree_view" model="ir.ui.view">
            <field name="name">container.type.tree</field>
            <field name="model">container.type</field>
            <field name="arch" type="xml">
                <tree string="Container Type List">
                    <field name="container_code"/>
                    <field name="description"/>
                    <field name="size" string="Container Size"/>
                    <field name="max_cubic_ft"/>
                    <field name="max_volume"/>
                    <field name="max_weight"/>
                    <field name="no_of_teu"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

