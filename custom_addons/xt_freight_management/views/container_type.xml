        <record id="container_type_act_window" model="ir.actions.act_window">
            <field name="name">Container Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">container.type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Container Type" id="container_type_menu" parent="menu_others_config" action="container_type_act_window"/>

    </data>
</odoo>