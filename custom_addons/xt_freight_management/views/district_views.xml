<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="district_view_form" model="ir.ui.view">
        <field name="name">district.form</field>
        <field name="model">district</field>
        <field name="arch" type="xml">
            <form string="District">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="district_view_tree" model="ir.ui.view">
        <field name="name">district.tree</field>
        <field name="model">district</field>
        <field name="arch" type="xml">
            <tree string="District">
                <field name="code"/>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="district_view_search" model="ir.ui.view">
        <field name="name">district.search</field>
        <field name="model">district</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_district" model="ir.actions.act_window">
        <field name="name">District</field>
        <field name="res_model">district</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="xt_freight_management.district_view_tree"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a District!
            </p>
        </field>
    </record>

    <menuitem id="menu_district"
              parent="xt_freight_management.menu_others_config"
              action="action_district" sequence="17"/>
</odoo>
