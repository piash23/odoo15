        <record id="shipping_line_act_window" model="ir.actions.act_window">
            <field name="name">Shipping Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shipping.line</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There is no examples click here to add new Shipping Line.
                </p>
            </field>
        </record>

        <menuitem name="Shipping Line" id="Shipping_line_menu" parent="xt_freight_management.menu_others_config"
                  action="shipping_line_act_window"/>

    </data>
</odoo>