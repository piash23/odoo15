        <!--                        <filter string="Example Field" name="example_field" domain="[]"-->
        <!--                                context="{'group_by':'example_field'}"/>-->
        <!--                    </group>-->
        <!--                </search>-->
        <!--            </field>-->
        <!--        </record>-->

        <record id="freight_charge_act_window" model="ir.actions.act_window">
            <field name="name">Freight Charge</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">freight.charge</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click here to add new Freight Charge.
                </p>
            </field>
        </record>

        <menuitem name="Freight Charge" id="freight_charge_menu" parent="menu_others_config"
                  action="freight_charge_act_window"/>

    </data>
</odoo>