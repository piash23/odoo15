        <record id="charge_code_act_window" model="ir.actions.act_window">
            <field name="name">Charge Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">charge.code</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    click here to add new Charge Code.
                </p>
            </field>
        </record>

        <menuitem name="Charge Code" id="charge_code_menu" parent="menu_others_config" action="charge_code_act_window"/>

    </data>
