<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="delivery_type_view_form" model="ir.ui.view">
        <field name="name">delivery.type.form</field>
        <field name="model">delivery.type</field>
        <field name="arch" type="xml">
            <form string="Delivery Type">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="delivery_type_view_tree" model="ir.ui.view">
        <field name="name">delivery.type.tree</field>
        <field name="model">delivery.type</field>
        <field name="arch" type="xml">
            <tree string="Delivery Type">
                <field name="code"/>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="delivery_type_view_search" model="ir.ui.view">
        <field name="name">delivery.type.search</field>
        <field name="model">delivery.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_delivery_type" model="ir.actions.act_window">
        <field name="name">Delivery Type</field>
        <field name="res_model">delivery.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="xt_freight_management.delivery_type_view_tree"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Delivery Type!
            </p>
        </field>
    </record>

    <menuitem id="menu_delivery_type"
              parent="xt_freight_management.menu_others_config"
              action="action_delivery_type" sequence="18"/>
</odoo>
