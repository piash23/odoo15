        <record id="vessel_code_act_window" model="ir.actions.act_window">
            <field name="name">Vessel Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vessel.code</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There is no examples click here to add new Vessel Code.
                </p>
            </field>
        </record>

        <menuitem name="Vessel Code" id="vessel_code_menu" parent="menu_others_config" action="vessel_code_act_window"/>

    </data>
