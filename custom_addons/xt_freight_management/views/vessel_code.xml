<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="vessel_code_form_view" model="ir.ui.view">
            <field name="name">vessel.code.form</field>
            <field name="model">vessel.code</field>
            <field name="arch" type="xml">
                <form string="Vessel Code">
                    <sheet>
                        <div class="oe_title">
                            <label for="vessel_code"/>
                            <h1>
                                <field name="vessel_code" placeholder="Vessel Code"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="type"/>
                                <field name="shipping_line"/>
                                <field name="ship_owner"/>

                            </group>
                            <group>
                                <field name="nrt"/>
                                <field name="grt"/>
                                <field name="country_flag"/>
                                <field name="year_build"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="vessel_code_tree_view" model="ir.ui.view">
            <field name="name">vessel.code.tree</field>
            <field name="model">vessel.code</field>
            <field name="arch" type="xml">
                <tree string="Vessel Code">
                    <field name="vessel_code"/>
                    <field name="name" string="Vessel Name"/>
                    <field name="type" string="Vessel Type"/>
                    <field name="shipping_line"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

